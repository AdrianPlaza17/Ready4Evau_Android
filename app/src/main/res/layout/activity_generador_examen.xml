<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ejercicios.GeneradorExamenMatematicas">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Elige un tema"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_examinarseMatrices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Matrices" />

    <Button
        android:id="@+id/btn_examinarseDeterminantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Determinantes" />

    <Button
        android:id="@+id/btn_examinarseGeometria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Geometría" />

    <Button
        android:id="@+id/btn_examinarseLimites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Límites" />

    <Button
        android:id="@+id/btn_examinarseDerivadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Derivadas" />

    <Button
        android:id="@+id/btn_examinarseIntegrales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Integrales" />

    <Button
        android:id="@+id/btn_examinarseProbabilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Probabilidad" />

    <Button
        android:id="@+id/btn_examinarseTodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_borde_naranja"
        android:fontFamily="@font/roboto_medium"
        android:text="Todos los temas" />
</LinearLayout>